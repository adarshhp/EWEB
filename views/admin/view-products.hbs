<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn=success ml-auto">ADD PRODUCTS</a>
    </div>
  </div>
</section>

<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
          onclick="return confirm('do u wnat to delete{{this.name}}')">delete</a>


      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</section>